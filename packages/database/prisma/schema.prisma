generator custom_generator {
    provider = "prisma-generator-fake-data"
    output   = "../types/fake-data.ts"
}

generator client {
    provider = "prisma-client-js"
    output   = "../generated/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URI")
}

